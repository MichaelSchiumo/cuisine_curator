
<%= form_for @meal do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :type %>
  <%= f.text_field :type %>
  <%= f.label :difficulty %>
  <%= f.number_field :difficulty %>
  <%= f.label :rating %>
  <%= f.number_field :rating %>
  <%= f.label :prep_time %>
  <%= f.number_field :prep_time %>
  <%= f.label :ingredients %>
  <%= f.text_area :ingredients %>
  <%= f.label :notes %>
  <%= f.text_area :notes %>
  <%= f.submit %>
<% end %>   
